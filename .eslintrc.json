{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "camelcase": "error",
    "func-style": ["error", "declaration", {
      "allowArrowFunctions": true
      }
    ],
    "multiline-comment-style": ["error", "starred-block"],
    "no-confusing-arrow": ["error", {
      "allowParens": true
      }
    ],
    "prefer-const": "error",
    "array-bracket-spacing": ["error", "always"],
    "arrow-spacing": "error",
    "indent": ["error", 2],
    "no-tabs": "error"
    }
}
